<div class="home-page">
  <div class="courses">
    {{#each courses}}
      <div class="course-item">
        <a href="courses/{{this.slug}}">
          <img src={{this.image}} alt={{this.name}} />
          <h5>{{this.name}}</h5>
        </a>
        <p>{{this.description}}</p>
        <p>{{this.level}}</p>
      </div>
    {{/each}}
  </div>
</div>