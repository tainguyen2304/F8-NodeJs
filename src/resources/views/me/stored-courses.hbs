<div class="stored-courese">
  <h1>khoa hoc cua toi</h1>
  <a href="/me/trash/courses">thung rac</a>

  <table>
    <thead>
      <tr>
        <th>stt</th>
        <th>ten khoa hoc</th>
        <th>mo ta</th>
        <th>trinh do</th>
        <th>thoi gian tao</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <td>{{sum @index 1}}</td>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.level}}</td>
          <td>{{this.createAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit">edit</a>
            <form action="/courses/{{this._id}}?_method=DELETE" method="POST">
              <button type="submit">DELETE</button>
            </form>
          </td>
        </tr>
      {{else}}
        <tr>
          <td>Ban chu dang khoa hoc nao.
            <a href="/courses/create">Dang khoa hoc</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>